  margin-top: 30px;
  display: flex;  
  flex-direction: row;  
  justify-content: center;  
}
.text{
 padding-top:15px;

}
.text1{
  display: flex;
  align-items: center;
  justify-content: center
}

.img{
  height: 50px;
  width: 50px;
}

.head{
width: 750rpx;
height: 200rpx;
position: relative;
z-index: 9999;
align-content: center
}
.title{
  display: flex;
  line-height: 13vh;
  flex-direction: row;
  margin-top: 2vh;
  margin-left: 1vh;
  margin-right: 1vh;
    border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
border-bottom: 10rpx solid #ddd;
border-top: 10rpx solid #ddd;
}
.flex-text{
  display: flex;
   border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  width: 10vh;
  background-color: #d8f0fa;
  justify-content: center;
}
.content{

  display: flex;
  margin-left: 1vh;
  margin-right: 1vh;
  flex-direction: row;
  border-right: 1rpx solid #ddd;
    border-left: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
}
.column-text-a{
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  justify-content: flex-end;
  align-items: center;
  width: 10vh;
  height: 13vh;
}
.column-text-b{
  display: flex;

  flex-direction: column;
  border-right: 1rpx solid #ddd;
  justify-content: flex-end;
  width: 10vh;
  height: 13vh;
}
.column-text-item{
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  justify-content: center;
  align-items: center;
  width: 10vh;
  height: 13vh;

}
.loop{
  display: flex;
  flex-direction: column;
}